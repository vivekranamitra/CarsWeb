@model CarsWeb.Models.SearchModel
<title>Cars</title>
<style>
   table, th, td{
       border: 1px solid black;
       border-collapse:collapse;
   }
   div {
       margin-top: 10px;
       margin-bottom:10px;
   }
   table{
       margin:0 auto;
       border-radius: 20px;
   }
   td{
       padding-left:10px;
   }
</style>

<divs style="text-align:center;width:100%;height:100%">
    <div>
        @using (Html.BeginForm("Index", "Cars", FormMethod.Get))
        { 
            <div>
                <h2>Cars</h2>
            </div>
            <div>
                @Html.TextBoxFor(x=>x.SearchWith)
                <input type="submit" value="Search"/>
            </div>
            <table style="width:400px" class="tableBorder">
                <tr>
                    <th>Make</th>
                    <th>Model</th>
                </tr>
                @foreach(var car in Model.Cars)
                {
                    <tr>
                        <td>@car.Make</td>
                        <td>@car.Model</td>
                    </tr>
                }
            </table>
            @Html.HiddenFor(x=>x.Authenticated)
         }
    </div>
    <div>
        @using (Html.BeginForm("Add", "Cars", FormMethod.Post))
        {
         <div>
             <div>
                 <div>
                    <input type="text" name="make" width="100" placeholder="Make" />
                    <input type="text" name="model" width="100" placeholder="Model" />
                </div>
                <div style="color:red">
                    @Model.ErrorMessage
                </div>
             </div>   
             <div>
                 <input type="submit" value="Add"/>
             </div>
             @Html.HiddenFor(model=>model.Authenticated)
             @Html.HiddenFor(model=>model.SearchWith)
        </div>
        }
    </div>
</divs>

